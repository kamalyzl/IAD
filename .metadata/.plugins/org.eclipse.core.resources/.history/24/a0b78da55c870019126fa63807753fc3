package cibertec;

import java.awt.EventQueue;
import javax.swing.JDialog;
import javax.swing.JLabel;
import java.awt.Font;
import javax.swing.JTextField;

import libreria.lib;
import javax.swing.JButton;
import javax.swing.JComboBox;
import javax.swing.DefaultComboBoxModel;
import javax.swing.ImageIcon;

import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;
import java.awt.SystemColor;
import java.awt.Color;
import javax.swing.SwingConstants;
public class DlgModCam extends JDialog implements ActionListener {
	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;
	private JLabel lblNumCama;
	private JTextField txtNumCam;
	private JLabel lblCat;
	private JLabel lblPrecio;
	private JTextField txtPrecio;
	private JButton btnIngresar;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					DlgModCam dialog = new DlgModCam();
					dialog.setDefaultCloseOperation(JDialog.DISPOSE_ON_CLOSE);
					dialog.setVisible(true);
				}
				catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the dialog.
	 */
	public DlgModCam() {
		getContentPane().setBackground(new Color(0, 128, 128));
		setTitle("Modificar Cama");
		setIconImage(new ImageIcon("imagenes/medicos.png").getImage());
		setBounds(100, 100, 433, 279);
		getContentPane().setLayout(null);
		
		lblNumCama = new JLabel("Nro. Cama:");
		lblNumCama.setFont(new Font("Georgia", Font.BOLD, 14));
		lblNumCama.setBounds(106, 76, 88, 25);
		getContentPane().add(lblNumCama);
		
		txtNumCam = new JTextField();
		txtNumCam.setBounds(223, 79, 86, 20);
		getContentPane().add(txtNumCam);
		txtNumCam.setColumns(10);
		
		lblCat = new JLabel("Categoria:");
		lblCat.setFont(new Font("Calibri", Font.BOLD, 12));
		lblCat.setBounds(106, 112, 88, 20);
		getContentPane().add(lblCat);
		
		lblPrecio = new JLabel("Precio:");
		lblPrecio.setFont(new Font("Georgia", Font.BOLD, 14));
		lblPrecio.setBounds(108, 143, 61, 20);
		getContentPane().add(lblPrecio);
		
		txtPrecio = new JTextField();
		txtPrecio.setBounds(223, 144, 86, 20);
		getContentPane().add(txtPrecio);
		txtPrecio.setColumns(10);
		
		btnIngresar = new JButton("Ingresar");
		btnIngresar.setFont(new Font("Tahoma", Font.BOLD, 11));
		btnIngresar.addActionListener(this);
		btnIngresar.setIcon(new ImageIcon("imagenes/ingresar.png"));
		btnIngresar.setBounds(80, 206, 126, 23);
		getContentPane().add(btnIngresar);
		
		cboCategoria = new JComboBox<String>();
		cboCategoria.setModel(new DefaultComboBoxModel<String>(lib.tiposdeCategoria));
		cboCategoria.setBounds(223, 113, 86, 20);
		getContentPane().add(cboCategoria);
		
		lblEstado = new JLabel("Estado:");
		lblEstado.setFont(new Font("Georgia", Font.BOLD, 14));
		lblEstado.setBounds(111, 170, 71, 25);
		getContentPane().add(lblEstado);
		
		cboEstado = new JComboBox<String>();
		cboEstado.setModel(new DefaultComboBoxModel<String>(lib.tiposdeEstadoCama));
		cboEstado.setBounds(221, 175, 88, 20);
		getContentPane().add(cboEstado);
		
		btnNewButton = new JButton("Salir");
		btnNewButton.addActionListener(this);
		btnNewButton.setFont(new Font("Tahoma", Font.BOLD, 11));
		btnNewButton.setBounds(214, 206, 126, 23);
		getContentPane().add(btnNewButton);
		
		txtModificar = new JTextField();
		txtModificar.setEditable(false);
		txtModificar.setFont(new Font("Sitka Heading", Font.BOLD, 40));
		txtModificar.setText("MODIFICAR");
		txtModificar.setHorizontalAlignment(SwingConstants.CENTER);
		txtModificar.setBackground(new Color(0, 191, 255));
		txtModificar.setBounds(0, 0, 417, 65);
		getContentPane().add(txtModificar);
		txtModificar.setColumns(10);

	}
	public int leerNumCama()
	{
		return Integer.parseInt(txtNumCam.getText());
	}
	public int leerCategoria(){
	return cboCategoria.getSelectedIndex();
	}
	public double leerPrecio(){
		return Double.parseDouble(txtPrecio.getText());
	}
	public int leerEstado(){
	return cboEstado.getSelectedIndex();
	}
	private JComboBox<String> cboCategoria;
	private JLabel lblEstado;
	private JComboBox<String> cboEstado;
	private JButton btnNewButton;
	private JTextField txtModificar;
	public void actionPerformed(ActionEvent arg0) {
		if (arg0.getSource() == btnNewButton) {
			actionPerformedBtnNewButton(arg0);
		}
		if (arg0.getSource() == btnIngresar) {
			actionPerformedBtnIngresar(arg0);
		}
	}
	//JOptionPane
	protected void actionPerformedBtnIngresar(ActionEvent arg0) {
		try {
			int numCama=leerNumCama();
			try {
				 
			     int Categoria=leerCategoria();
			     double precio=leerPrecio();
			     int estado=leerEstado();
			     clase.Cama x=new clase.Cama(numCama, Categoria, precio, estado);

			     Proyecto.ac.modificar(Proyecto.ac.buscar(numCama), x);
			     DlgAdiCam.listar();
			    
			}
			catch (Exception e) {
			lib.mensajeError(this,"Ingrese un numero en precio");
			}
		}
		catch (Exception e) {
		lib.mensajeError(this,"Ingrese un numero de cama");
			txtNumCam.requestFocus();
		}
    
	}		

	protected void actionPerformedBtnNewButton(ActionEvent arg0) {
		dispose();
	}
}
