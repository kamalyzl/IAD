		setBounds(100, 100, 506, 285);
		
		getContentPane().setLayout(null);
		
		label = new JLabel("");
		label.setIcon(new ImageIcon("F:\\AED\\sdfsd\\Soluci\u00F3n_Proyectos_IA\\Proyecto_\\bin\\img\\images.png"));
		label.setBounds(391, 0, 99, 68);
		getContentPane().add(label);
		
		txtNumCam = new JTextField();
